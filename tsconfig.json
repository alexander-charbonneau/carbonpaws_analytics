{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react-spring", "jest"]
  },
  "exclude": ["node_modules", "cypress", "public/datafeeds/udf/src", "public/charting_library", "build", "src/charting_library"],
  "include": ["**/*.js", "**/*.ts", "**/*.tsx", "src/components/analytics/GoogleAnalyticsReporter.jsx"]
}
